{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@main/*": [
                "src/main/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "public"
    ]
}